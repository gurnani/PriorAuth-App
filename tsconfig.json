{
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "lib": ["ES2017", "DOM"],
    "outDir": "./js/compiled",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "js/**/*"
  ]
}
